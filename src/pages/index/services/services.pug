mixin service(data)
  +b.service.tab-js(id=attributes.id class=attributes.class)
    +e.pluses
      +img(data.img)
      +e.text
        +e.H4.title!=data.title
        +b.UL.check-list
          each plus in data.pluses
            +e.LI.item!=plus.item
        
    +e.desc
      each text in data.texts
        p!=text.p


