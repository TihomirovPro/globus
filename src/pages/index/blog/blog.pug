mixin post(data)
  +b.ARTICLE.post.swiper-slide
    +e.A.image(href="#")
      +img(data.img)
    +e.desc
      +e.H5.title
        a(href="#")!=data.title
      +e.info
        +e.TIME.time!=data.time
        +e.SPAN.author!=data.author
      +e.P.text!=data.text
      +e.A.more(href="#") Читать далее


