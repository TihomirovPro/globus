mixin slide(data)
  +b.slide.swiper-slide
    +e.desc
      +e.H2.title=data.title
      +e.P.text=data.text
      +e.buttons
        +e.A.btn.btn.btn_white(href="#") Подробнее
        +e.A.btn.btn.btn_outline.index-btn(href="#") Подать заявку
    +image(data.img)

mixin catalog-slide(data)
  +b.LI.catalog-item
    +e.A.catalog-link(href='#')
      +e.title-wrap
        +e.icon!=data.icon
        +e.H5.catalog-title=data.title
      +e.P.catalog-text=data.text

