mixin post(data)
 +b.ARTICLE.post(class=attributes.class)
    +e.A.image(href="#")
      +image(data.img)
    +e.desc
      if data.h5
        +e.H5.title
          a.link(href="#")!=data.title
      else if data.h6
        +e.H6.title
          a.link(href="#")!=data.title
      else
        +e.H4.title
          a.link(href="#")!=data.title
      +b.post-info
        if data.time
          +e.item
            |<svg class='post-info__icon' width="15" height="13" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M3 1v2M9 1v2M12 1v2M6 1v2M12.7 2H2.3C1.58 2 1 2.5 1 3.12v7.76C1 11.5 1.58 12 2.3 12h10.4c.72 0 1.3-.5 1.3-1.12V3.12C14 2.5 13.42 2 12.7 2z" stroke="#007BF1" stroke-linecap="round" stroke-linejoin="round"/><path d="M4 5h1M4 7h1M4 9h1M7 5h1M7 7h1M7 9h1M10 5h1M10 7h1M10 9h1" stroke="#007BF1" stroke-linecap="round"/></svg>
            +e.TIME.time(datetime="2019-09-03T19:00")!=data.time
          //- span  | 
        if data.author
          |<svg class='post-info__icon' xmlns="http://www.w3.org/2000/svg" viewBox="0 0 60 60"><path fill="#007BF1" d="M30 0a30 30 0 110 60 30 30 0 010-60zm0 58a28 28 0 100-56 28 28 0 000 56z"/><path fill="#007BF1" d="M30 6l1 1v23h15a1 1 0 110 2H30l-1-1V7l1-1z"/></svg>
          +e.SPAN.author!=data.author
        if data.views
          //- span  |
          +e.item
            |<svg class='post-info__icon' width="12" height="12" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M6 3v3h2" stroke="#007BF1" stroke-linecap="round"/><circle cx="6" cy="6" r="5.5" stroke="#007BF1"/></svg>
            +e.SPAN.views!=data.views
      if data.text 
        +e.P.text!=data.text
      if data.btn
        +e.buttons
          +e.A.btn.btn._outline-color(href="#") Читать далее &#10230;
          .share-container
            a.share-link.btn.facebook(href="#" aria-label="facebook")
            a.share-link.btn.in(href="#" aria-label="in")
            a.share-link.btn.twitter(href="#" aria-label="twitter")
            .share-button.btn
      if data.more
        +e.A.more(href="#") Читать далее

